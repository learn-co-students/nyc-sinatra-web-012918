<form action="/figures/<%= @figure.id %>" method="post">
  <input hidden="true" name="_method" value="patch">
  <label><h4><%= @figure.name %></h4></label>
  <input id="figure_name" type="text" name="figure[name]" value="<%= @figure.name %>">

  <label><h4>Landmarks</h4></label>
  <% @landmarks.each do |landmark| %>
    <%= landmark.name %>
    <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%= landmark.id %>"><br>
  <% end %>

  <label><h4>Create New Landmarks</h4></label>
  <input id="new_landmark" type="text" name="landmark[name]">


  <label><h4>Titles</h4></label>
  <% @titles.each do |title| %>
    <%= title.name %>
    <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%= title.id %>"><br>
  <% end %>

  <label><h4>Create New Title</h4></label>
  <input id="new_title" type="text" name="title[name]">

  <input type="submit" value="Edit Figure">

</form>
